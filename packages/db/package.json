{
  "name": "@wine-app/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/client.ts",
    "./schema": "./src/schema/index.ts"
  },
  "scripts": {
    "generate": "drizzle-kit generate",
    "migrate": "tsx src/migrate.ts",
    "seed": "tsx src/seed.ts",
    "studio": "drizzle-kit studio",
    "up": "docker compose -f ../../docker-compose.yml up -d --wait && pnpm run migrate && pnpm run seed",
    "down": "docker compose -f ../../docker-compose.yml down -v"
  },
  "dependencies": {
    "drizzle-orm": "^0.36.1",
    "postgres": "^3.4.4"
  },
  "devDependencies": {
    "drizzle-kit": "^0.28.1",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
